<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link href="{{ asset('css/navbar.css') }}" type="text/css" rel="stylesheet" />

    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link href="{{ asset('css/table.css') }}" type="text/css" rel="stylesheet" />
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}

        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <nav id="mainNav">
        <ul>
            <li style="float: left"><a href="#"><i class="icon-home"></i><br />Главная</a></li>
            <li style="float: left"><a href="#"><i class="icon-cog"></i><br />О нас</a></li>
            {% if is_granted('ROLE_USER') %}
                <li style="float: left"><a href="{{ path('hero') }}"><i class="icon-desktop"></i><br />Герои</a></li>
                <li style="float: left"><a href="#"><i class="icon-user"></i><br />Сводка</a></li>
                <li style="float: left"><a href="#"><i class="icon-user"></i><br />Боссы</a>
                    <ul class='sub-menus'>
                        <li><a href='#'>Services Sub Menu 1</a></li>
                        <li><a href='#'>Services Sub Menu 2</a></li>
                        <li><a href='#'>Services Sub Menu 3</a></li>
                    </ul>
                </li>
                <li style="float: right"><a href="{{ path('app_logout') }}"><i class="icon-twitter"></i><br />Выход</a></li>
                <li style="float: right"><a href="{{ path('userView') }}"><i class="icon-twitter"></i><br />Профиль</a></li>
                <li style="float: right"><a href="#"><i class="icon-twitter"></i><br />Админка</a>
                    <ul class='sub-menus'>
                        {% if is_granted('ROLE_OFICER') %}
                        <li><a href='#'>Назначение командиров</a></li>
                        <li><a href='#'>Привязка игроков к командирам</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a href='{{ path('getRole') }}'>Назначение прав</a></li>
                    </ul>
                </li>
        {% else %}
                <li style="float: right"><a href="{{ path('login') }}"><i class="icon-twitter"></i><br />Вход</a></li>
                <li style="float: right"><a href="{{path ('register')}}"><i class="icon-twitter"></i><br />Регистрация</a></li>
            {% endif %}


        </ul><div class="clr"></div>
    </nav>



</head>
<body>

{% block body %}{% endblock %}
</body>
</html>
