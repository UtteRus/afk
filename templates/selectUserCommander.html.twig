{% extends'base.html.twig' %}

{% block body %}

    <script type="text/javascript">
    </script>

    <table >
        <thead>
        <tr>
            <th>Игрок</th>
            <th>Его командир</th>
            <th>Командиры</th>
            <th></th>
        </tr>
        </thead>



        {% for item in roleUser %}

            <tr>
                <form method="post" action="{{path('selectUserCommander')}}">
                    <td><input name="userName" type="hidden" value="{{ item.userName }}" >{{ item.userName}}</td>
                    <td>{{ item.commander }}</td>
                    <td>
                        <select name="selectCommander">
                            {% for user in roleCommander %}
                                <option value="{{ user.userName }}">{{ user.userName }}</option>
                            {% endfor %}
                        </select>
                    </td>
                    <td> <input type="submit"  value="Назначить" ></td>
                </form>
            </tr>
        {% endfor %}

        </tbody>
    </table>



{% endblock %}