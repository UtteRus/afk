
{% extends'base.html.twig' %}


{% block stylesheets %}
    <link href="{{ asset('css/table.css') }}" type="text/css" rel="stylesheet" />

{% endblock %}

{#{% block javascripts %}
    <script scr="{{ asset('js/sortTable.js') }}"></script>
{% endblock %}#}


{% block body%}
{% if is_granted('ROLE_USER') %}


   {# сюда нужно choise_lebel#}
<div>
    <form method="post" action="{{ path('heroView') }}">
        <select name="selectUser">
            {% for user in usersAll %}
                <option value={{ user.id }}>{{ user.email }}</option>
            {% endfor %}
            <input type="submit" value="Показать">
        </select>

        <a href="{{path ('heroAdd')}}"><i class="icon-twitter"></i><button type="button" style="float: right">Добавить героя</button></a>
    </form>

</div>


{% endif %}

    <div>

        <table class="table_sort">
            <thead>
             <tr>
                <th></th>
                <th >Имя героя</th>
                <th>Фракция</th>
                <th>Развитие</th>
                <th>ИП</th>
                <th>Нужно ИП</th>
                <th>Мебель</th>
                <th>Нужно Мебели</th>
                <th>Гравировка</th>
                <th>Нужно Гравировки</th>
                <th>Приоритет</th>
                {#<th>Прогрес</th>#}
                <th>Дата</th>
                <th></th>
             </tr>
            </thead>

            <tbody>
                 {% for item in specifications %}
                <tr>
                    <td><img src="{{ item.hid.img  }}" rel= /></td>
                    <td>{{ item.hid.heroName }}</td>
                    <td>{{ item.hid.fraction }}</td>
                    <td>{{ item.evolution }}</td>
                    <td>{{ item.ip }}</td>
                    <td>
                        {% if item.ip >= item.hid.ipRecommended  %}
                            Достаточно улучшено
                        {% else %}
                            нужно еще прокачать {{ item.hid.ipRecommended - item.ip}}
                        {% endif %}
                    </td>
                    <td>{{ item.furniture }}</td>
                    <td>{% if item.furniture >= item.hid.furnitureRecommended %}
                        Мебель собрана
                        {% else %}
                        Нужно еще мебели {{ item.hid.furnitureRecommended - item.furniture }}
                        {% endif %}
                    </td>
                    <td>{{ item.engraving }}</td>
                    <td>{% if item.engraving >= item.hid.engravingRecommended %}
                            Все прокачал
                        {% else %}
                            нужно еще прокачать {{ item.hid.engravingRecommended - item.engraving }}
                        {% endif %}
                    </td>
                    <td>{{ item.hid.velue }}</td>
                    {#<td></td>#}
                    <td>{{ item.data|date("d.m.y h:i") }}</td>
                    <td>  <a href="{{ path('edit-hero',{id: item.id})}} ">
                            <button type="button" style="float: right">Редактировать</button>
                        </a>
                    </td>
                </tr>
                </tbody>

                {% endfor %}
            </table>

    </div>



{% endblock %}
